<% layout("/layouts/boilerplate")%>
<style>
     @media(max-width:410px){
    body{
        padding-top: 18rem;
    }
                            }
</style>
<body>
    <h3 class="offset-3">Signup on wanderlust</h3>
    <div class="row" mt-3>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-level">Username</label>
                    <input 
                      type="text"
                      id="email"
                      name="username"
                      class="form-control"
                      required>
                    
                </div>
                <div class="mb-3">
                    <label for="email" class="form-level">Email</label>
                    <input 
                      type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      required>
                    
                </div>
                <div class="mb-3">
                    <label for="password" class="form-level">password</label>
                    <input 
                      type="password"
                      name="password"
                      class="form-control"
                      required>
                    
                </div>
                <button class="btn btn-success mb-3" >SignUp</button>
            </form>
        </div>

    </div>
</body>